{
  "name": "@lykmapipo/express-test-helpers",
  "version": "0.8.20",
  "description": "Sensible test helpers for express",
  "main": "lib/index.js",
  "module": "es/index.js",
  "scripts": {
    "clean": "rimraf lib dist es umd logs",
    "prebuild": "npm test && npm run clean",
    "build": "rollup -c",
    "lint": "eslint --fix --ext .js src/ test/ rollup.config.js",
    "pretest": "npm run lint",
    "test": "NODE_ENV=test mocha --require @babel/register test/**/*.spec.js",
    "posttest": "rimraf logs",
    "docs": "doxdox 'lib/**/*.js' -p package.json -l markdown -o DOCUMENTATION.md",
    "cmt": "git add -A && git-cz",
    "changelog": "changelog"
  },
  "keywords": [
    "lykmapipo",
    "express",
    "router",
    "middleware",
    "http",
    "test",
    "specs",
    "unit",
    "helpers",
    "utils",
    "sinon",
    "chai",
    "spy",
    "mock",
    "faker",
    "expect",
    "should",
    "bdd",
    "tdd"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lykmapipo/express-test-helpers.git"
  },
  "author": {
    "name": "lykmapipo",
    "email": "lallyelias87@gmail.com",
    "url": "https://github.com/lykmapipo"
  },
  "contributors": [
    {
      "name": "lykmapipo",
      "email": "lallyelias87@gmail.com",
      "url": "https://github.com/lykmapipo"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lykmapipo/express-test-helpers/issues"
  },
  "homepage": "https://github.com/lykmapipo/express-test-helpers#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@babel/register": "^7.8.6",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/travis-cli": "^8.3.5",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "doxdox": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-mocha": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.2",
    "generate-changelog": "^1.8.0",
    "handlebars": "^4.7.3",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "lodash.template": "^4.5.0",
    "mocha": "^7.1.0",
    "multer": "^1.4.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "rollup": "^1.32.1",
    "shelljs": "^0.8.3"
  },
  "peerDependencies": {},
  "dependencies": {
    "@lykmapipo/express-common": ">=0.17.22",
    "@lykmapipo/test-helpers": ">=0.5.10",
    "lodash": ">=4.17.15",
    "path-to-regexp": ">=6.1.0",
    "supertest": ">=4.0.2",
    "uuid": ">=7.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint",
      "git add -A"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
